= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :due_at
    = f.datetime_select :due_at
  .actions
    = f.submit 'Save'
